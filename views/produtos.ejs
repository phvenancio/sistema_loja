<%- include("partials/navbar.ejs") %> <br>
<form action="/produtos/new " method="post">
    <label>Nome do Produto:</label>
    <input type="text" name="nomeProduto" placeholder="Digite o Nome do Produto" required><br>
    <label>Categoria:</label>
    <input type="text" name="categoria" placeholder="Digite a Categoria do Produto" required><br>
    <label>Preço:</label>
    <input type="text" name="preco" placeholder="Digite o Preço do Produto" required><br>
    <input type="submit" value="Cadastrar">
</form>
<table>
    <thead>
        <th>Nome do Produto:</th>
        <th>Categoria:</th>
        <th>Preço:</th>
        <th>Ações:</th>
    </thead>
    <tbody>
        <% produtos.forEach((produto) => { %>
        <tr>
            <td><%= produto.nomeProduto %></td>
            <td><%= produto.categoria %></td>
            <td><%= produto.preco %></td>
            <td><a href="/produtos/edit/<%= produto.id %>">Alterar</a></td>
            <td><a href="/produtos/delete/<%= produto.id %>">Excluir</a></td>
        </tr>
        <% }) %>
    </tbody>
</table>
