<%- include("partials/header.ejs") %>

<% if(messages.danger){ %>
    <div class="alert alert-danger">
        <%= messages.danger %>
    </div>
<% } %>

<div class="container col-4">
    <div class="card mt-4">
        <div class="card-header">
            <h2>Cadastro de Usuário</h2>
        </div>
        <div class="card-body">
            <form action="/createUser" method="POST">
                <label>Nome Completo:</label>
                <input type="name" class="form-control" name="nome" placeholder="Digite seu Nome" required><br>
                <label>E-mail:</label>
                <input type="email" class="form-control" name="email" placeholder="email@exemplo.com" required><br>
                <label>Senha:</label>
                <input type="password" class="form-control" name="senha" placeholder="Insira uma senha com no mínimo 8 caracteres" required><br>
                <input type="submit" class="btn btn-success btn-block" value="Cadastrar">
            </form>
            <hr>
            <h6>Já possui conta?<a href="/login">Faça o login!</a></h6>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>